{
  "name": "adam-painter-api",
  "version": "2.0.0",
  "description": "Adam Painter Booking API with TypeScript, smart prioritization, and MongoDB",
  "main": "dist/index.js",
  "license": "MIT",
  "author": "Adam Painter Booking System",
  "keywords": ["api", "booking", "painter", "scheduling", "typescript", "mongodb"],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --clear src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No linting configured'",
    "test": "echo 'No tests configured'"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongoose": "^8.18.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/uuid": "^10.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
